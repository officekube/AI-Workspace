{
  "name": "ai-desktop",
  "version": "1.0.0",
  "description": "AI Desktop Application with bundled runtimes",
  "main": "src/main/index.js",
  "scripts": {
    "start": "electron .",
    "download-runtimes": "node scripts/download-runtimes.js",
    "build": "npm run download-runtimes && electron-builder",
    "release": "electron-builder --publish always"
  },
  "build": {
    "appId": "com.aidesktop.app",
    "productName": "AI Desktop",
    "asar": true,
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "src/**/*",
      "resources/**/*",
      "!resources/runtimes/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "resources/runtimes",
        "to": "runtimes",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.developer-tools",
      "darkModeSupport": true,
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "notarize": false
    },
    "dmg": {
      "writeUpdateInfo": false,
      "format": "ULFO"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    },
    "publish": {
      "provider": "github",
      "releaseType": "release"
    }
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "axios": "^1.6.0",
    "extract-zip": "^2.0.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/ai-desktop.git"
  },
  "author": "",
  "license": "MIT"
}